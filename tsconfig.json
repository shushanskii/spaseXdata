{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "src/*": [
        "./*"
      ],
      "app/*": [
        "./app/*"
      ],
      "components/*": [
        "./app/components/*"
      ],
      "store/*": [
        "./app/store/*"
      ],
      "actions/*": [
        "./app/actions/*"
      ],
      "middleware/*": [
        "./app/middleware/*"
      ],
      "utilities/*": [
        "./app/utilities/*"
      ]
    }
  }
}
